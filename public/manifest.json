{
  "manifest_version": 2, 

  "name": "Classes Extension",
  "description": "For querying class timeslots from UCLA's Schedule of Classes page.",
  "version": "0.0.2",
  "icons": {
    "16": "logo-small.png",
    "48": "logo-small.png",
    "128": "logo-small.png"
  },
  "browser_action": {
    "default_popup": "index.html"
  },
  "content_scripts": [{
    "matches": ["https://be.my.ucla.edu/ClassPlanner/ClassPlan.aspx"],
    "js": ["jquery.js", "content.js"],
    "run_at": "document_idle",
    "all_frames": false
  }],
  "background": {
    "persistent": false,
    "scripts": ["background.js"]
  },
  "content_security_policy": "script-src 'self' 'sha256-ELkDE2InNI702G86lymxXYBdrcJq5bMn8+PhTgN6cks='; object-src 'self'", 
  "permissions": [
    "tabs"
  ],
  "web_accessible_resources": ["*.html"]
}
